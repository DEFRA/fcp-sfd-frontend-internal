{% macro subHeader(businessName="", sbi="", userName="") %}
<div class="govuk-grid-row sub-header-container govuk-!-padding-top-3">

  <div class="govuk-grid-column-two-thirds">
      <h3 class="govuk-heading-s govuk-!-margin-bottom-1">{{ businessName }}</h3>
      <p class="govuk-body-s govuk-!-margin-bottom-2">Single business identifier (SBI): {{ sbi }}</p>
  </div>

  <div class="govuk-grid-column-one-third">
      <h3 class="govuk-heading-s govuk-!-margin-bottom-1 sub-header-user-name govuk-text-align-right">{{ userName }}</h3>
  </div>

</div>

<hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-0 govuk-!-margin-top-2">
{% endmacro %}
